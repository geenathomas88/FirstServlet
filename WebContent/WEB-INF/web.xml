<web-app>
	<servlet>
		<servlet-name>dummy</servlet-name>
		<servlet-class>com.servlet.FirstServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>dummy</servlet-name>
		<url-pattern>/sample</url-pattern>
	</servlet-mapping>

	<filter>
		<filter-name>inputvalidate</filter-name>
		<filter-class>com.filter.InputValidationFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>inputvalidate</filter-name>
		<url-pattern>/sample</url-pattern>
	</filter-mapping>
	
	<servlet>
		<servlet-name>displayheader</servlet-name>
		<servlet-class>com.servlet.DisplayHeader</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>displayheader</servlet-name>
		<url-pattern>/displayheader</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>sessiondetails</servlet-name>
		<servlet-class>com.sessiontracking.SessionExample</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>sessiondetails</servlet-name>
		<url-pattern>/sessiondetails</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>autorefresh</servlet-name>
		<servlet-class>com.servlet.AutorefreshExample</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>autorefresh</servlet-name>
		<url-pattern>/currenttime</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>setattribute</servlet-name>
		<servlet-class>com.servlet.Servlet1</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>setattribute</servlet-name>
		<url-pattern>/setattribute</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>getattribute</servlet-name>
		<servlet-class>com.servlet.Servlet2</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>getattribute</servlet-name>
		<url-pattern>/getattribute</url-pattern>
	</servlet-mapping>
		
	<servlet>
		<servlet-name>config</servlet-name>
		<servlet-class>com.servlet.ConfigServlet</servlet-class>
		<init-param>
			<param-name>uname</param-name>
			<param-value>Geena</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>config</servlet-name>
		<url-pattern>/configservlet</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>createcookie</servlet-name>
		<servlet-class>com.sessiontracking.CookieExample</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>createcookie</servlet-name>
		<url-pattern>/createcookie</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>showcookie</servlet-name>
		<servlet-class>com.sessiontracking.ShowCookie</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>showcookie</servlet-name>
		<url-pattern>/showcookie</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>logout</servlet-name>
		<servlet-class>com.sessiontracking.DeleteCookie</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
			
	<context-param>
		<param-name>dbName</param-name>
		<param-value>com.mysql.jdbc.Driver</param-value>
	</context-param>
	
	<context-param>  
		<param-name>username</param-name>  
		<param-value>system</param-value>  
	</context-param>  
	  
	<context-param>  
		<param-name>password</param-name>  
		<param-value>oracle</param-value>  
	</context-param>
	
</web-app>